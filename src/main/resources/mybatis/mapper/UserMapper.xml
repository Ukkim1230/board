<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="UserMapper">
	<select id="selectUsers" resultType="com.web.dto.UserDTO">
		select UI_NUM,UI_NAME,UI_ID,UI_PWD,UI_GRADE,CREDAT,CRETIM,LMODAT,LMOTIM from
		USER_INFO
	</select>
	<select id="selectUser" resultType="com.web.dto.UserDTO">
		select UI_NUM,UI_NAME,UI_ID,UI_PWD,UI_GRADE,CREDAT,CRETIM,LMODAT,LMOTIM from USER_INFO
		WHERE UI_NUM=#{uiNum}
	</select>
	<select id="selectUserByIdAndPwd" resultType="com.board.dto.UserDTO">
	select UI_NUM,UI_NAME,UI_ID,UI_PWD,UI_GRADE,CREDAT,CRETIM,LMODAT,LMOTIM from USER_INFO
	WHERE UI_ID=#{uiId}
	AND UI_PWD=#{uiPwd}
	</select>
	<insert id="insertUser">
		insert into USER_INFO(UI_NAME,UI_ID,UI_PWD,UI_GRADE)
		values(#{uiName},#{uiId},#{uiPwd},#{uiGrade})
	</insert>
	<update id="updateUser">
		update USER_INFO
		set UI_NAME=#{uiName},
		UI_ID =#{uiId},
		UI_PWD=#{uiPwd},
		UI_GRADE = #{uiGrade}
		where UI_NUM=#{uiNum}
	</update>
	<delete id="deleteUser">
		delete FROM USER_INFO WHERE UI_NUM = #{uiNum}
	</delete>
</mapper>